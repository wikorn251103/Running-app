<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBlue"
    tools:context=".Fragment.loginandregister.">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="สร้างบัญชีใหม่"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:shadowColor="#40000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="กรอกข้อมูลเพื่อเริ่มต้นใช้งาน"
            android:textSize="18sp"
            android:textColor="#E8F0FE"
            android:alpha="0.9"/>
    </LinearLayout>

    <!-- โลโก้ -->
    <androidx.cardview.widget.CardView
        android:id="@+id/container_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/headerSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_bg">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_shoe"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:tint="@color/darkBlue" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- ScrollView ครอบฟอร์ม -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/container_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp">

                <!-- ชื่อ-นามสกุล -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ชื่อ-นามสกุล"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F5F7FA"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="4dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="40dp"
                            android:background="#667eea"
                            android:layout_marginEnd="12dp"/>

                        <EditText
                            android:id="@+id/editTextName"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:hint="กรอกชื่อ-นามสกุล"
                            android:inputType="textCapWords"
                            android:paddingStart="8dp"
                            android:paddingEnd="16dp"
                            android:textColorHint="#AAAAAA"
                            android:textSize="15sp"
                            android:textColor="#333333"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- อีเมล -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="อีเมล"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F5F7FA"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="4dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="40dp"
                            android:background="#764ba2"
                            android:layout_marginEnd="12dp"/>

                        <EditText
                            android:id="@+id/editTextText5"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:hint="example@email.com"
                            android:inputType="textEmailAddress"
                            android:paddingStart="8dp"
                            android:paddingEnd="16dp"
                            android:textColorHint="#AAAAAA"
                            android:textSize="15sp"
                            android:textColor="#333333"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- รหัสผ่าน -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="รหัสผ่าน"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F5F7FA"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="4dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="40dp"
                            android:background="#f093fb"
                            android:layout_marginEnd="12dp"/>

                        <EditText
                            android:id="@+id/editTextText6"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:hint="กรอกรหัสผ่าน"
                            android:inputType="textPassword"
                            android:paddingStart="8dp"
                            android:paddingEnd="16dp"
                            android:textColorHint="#AAAAAA"
                            android:textSize="15sp"
                            android:textColor="#333333"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- ส่วนสูงและน้ำหนัก -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ส่วนสูง (ซม.)"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#F5F7FA">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:padding="4dp">

                                <View
                                    android:layout_width="4dp"
                                    android:layout_height="40dp"
                                    android:background="#34C759"
                                    android:layout_marginEnd="12dp"/>

                                <EditText
                                    android:id="@+id/editTextText10"
                                    android:layout_width="0dp"
                                    android:layout_height="48dp"
                                    android:layout_weight="1"
                                    android:background="@android:color/transparent"
                                    android:hint="175"
                                    android:inputType="number"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:textColorHint="#AAAAAA"
                                    android:textSize="15sp"
                                    android:textColor="#333333"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="น้ำหนัก (กก.)"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#F5F7FA">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:padding="4dp">

                                <View
                                    android:layout_width="4dp"
                                    android:layout_height="40dp"
                                    android:background="#FF9500"
                                    android:layout_marginEnd="12dp"/>

                                <EditText
                                    android:id="@+id/editTextText11"
                                    android:layout_width="0dp"
                                    android:layout_height="48dp"
                                    android:layout_weight="1"
                                    android:background="@android:color/transparent"
                                    android:hint="60"
                                    android:inputType="numberDecimal"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:textColorHint="#AAAAAA"
                                    android:textSize="15sp"
                                    android:textColor="#333333"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

                <!-- เพศ -->
                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="เพศ"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F5F7FA"
                    android:layout_marginBottom="20dp">

                    <RadioGroup
                        android:id="@+id/radioGroupGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="center">

                        <RadioButton
                            android:id="@+id/radioMale"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="ชาย"
                            android:textSize="15sp"
                            android:textColor="#333333"
                            android:layout_marginEnd="8dp"/>

                        <RadioButton
                            android:id="@+id/radioFemale"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="หญิง"
                            android:textSize="15sp"
                            android:textColor="#333333"
                            android:layout_marginStart="8dp"/>
                    </RadioGroup>
                </androidx.cardview.widget.CardView>

                <!-- อายุ -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="อายุ"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F5F7FA"
                    android:layout_marginBottom="32dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="4dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="40dp"
                            android:background="#FF3B30"
                            android:layout_marginEnd="12dp"/>

                        <EditText
                            android:id="@+id/editTextText7"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:hint="ระบุอายุของคุณ"
                            android:inputType="number"
                            android:paddingStart="8dp"
                            android:paddingEnd="16dp"
                            android:textColorHint="#AAAAAA"
                            android:textSize="15sp"
                            android:textColor="#333333"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- ปุ่มสมัครสมาชิก -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="24dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="สมัครสมาชิก"
                        android:background="@drawable/txt_bg"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        style="?android:attr/borderlessButtonStyle"/>
                </androidx.cardview.widget.CardView>

                <!-- Login Link -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="มีบัญชีแล้ว?"
                        android:textSize="15sp"
                        android:textColor="#666666"/>

                    <TextView
                        android:id="@+id/logintxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="เข้าสู่ระบบ"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/darkBlue" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>