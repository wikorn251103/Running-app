<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardTraining"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section with Gradient -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/gradient_card_header"
            android:padding="20dp"
            android:gravity="center_vertical">

            <!-- Day Circle -->
            <androidx.cardview.widget.CardView
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:cardCornerRadius="32dp"
                app:cardElevation="4dp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DAY"
                        android:textColor="#9E9E9E"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.1" />

                    <TextView
                        android:id="@+id/tvDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/darkBlue"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Day Name and Type -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDayName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="จันทร์"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Easy Run"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="6dp"
                    android:background="@drawable/type_badge"
                    android:letterSpacing="0.05" />
            </LinearLayout>
        </LinearLayout>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@color/white">

            <!-- Description -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <View
                    android:layout_width="4dp"
                    android:layout_height="32dp"
                    android:background="#2196F3"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Easy Run 6 km"
                    android:textSize="18sp"
                    android:textColor="@color/primaryBlue"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Pace Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#F5F5F5"
                android:padding="16dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    android:backgroundTint="@color/purple">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_bolt"
                        app:tint="@color/white" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="จังหวะเป้าหมาย"
                        android:textColor="#757575"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvPace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="6:30-7:00/km"
                        android:textSize="16sp"
                        android:textColor="#212121"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Start Workout Button -->
            <Button
                android:id="@+id/btnStartWorkout"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:text="เริ่มบันทึกการซ้อม"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="@color/green"
                app:cornerRadius="14dp"
                app:icon="@drawable/ic_bolt"
                app:iconTint="@color/white"
                app:iconGravity="textStart"
                android:elevation="2dp" />
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>