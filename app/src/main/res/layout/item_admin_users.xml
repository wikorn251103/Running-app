<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardUser"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="16dp"
    app:strokeWidth="0dp"
    android:backgroundTint="#F5F3FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Status Badge -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray" />

            <!-- Status Badge -->
            <TextView
                android:id="@+id/tvStatusBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="แก้ไข"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/accent_orange"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp" />
        </LinearLayout>

        <!-- User Name -->
        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ตัวอย่าง นครวัง"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="8dp" />

        <!-- Program Info -->
        <TextView
            android:id="@+id/tvProgramName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5K sub 25 min"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="4dp" />

        <!-- Week Info -->
        <TextView
            android:id="@+id/tvWeekInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="สัปดาห์ที่: 1/4"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="2dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="end">

            <!-- ปุ่มดูรายละเอียด -->
            <Button
                android:id="@+id/btnViewDetails"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="ดูรายละเอียด"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:backgroundTint="#8B5CF6"
                style="@style/Widget.MaterialComponents.Button"
                android:paddingHorizontal="16dp" />

            <!-- ปุ่มลบตารางซ้อม -->
            <Button
                android:id="@+id/btnDeleteProgram"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="ลบตารางซ้อม"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:backgroundTint="#EF4444"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_marginStart="8dp"
                android:paddingHorizontal="16dp" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>