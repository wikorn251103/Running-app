<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section with Gradient Background -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:background="@color/purple"
            android:paddingTop="40dp"
            android:paddingBottom="50dp">

            <!-- รูปโปรไฟล์ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_centerInParent="true">

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="70dp"
                    app:cardElevation="8dp"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/profileImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_default_user"
                        android:background="@drawable/backgroud_100dp"
                        android:padding="20dp"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>

                <!-- ชื่อ -->
                <TextView
                    android:id="@+id/textName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ชื่อ-นามสกุล"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:shadowColor="#40000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    android:layout_marginBottom="6dp"/>

                <!-- อีเมล -->
                <TextView
                    android:id="@+id/textEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="email@example.com"
                    android:textSize="15sp"
                    android:textColor="#E8F0FE"
                    android:alpha="0.9"/>
            </LinearLayout>
        </RelativeLayout>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="-60dp"
            android:paddingHorizontal="24dp">

            <!-- ข้อมูลส่วนตัว Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ข้อมูลส่วนตัว"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:layout_marginBottom="20dp"/>

                    <!-- เพศ -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp"
                        android:background="@drawable/info_item_bg">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="40dp"
                            android:background="#5B67CA"
                            android:layout_marginEnd="16dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="เพศ"
                                android:textColor="#8E8E93"
                                android:textSize="13sp"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:id="@+id/textGender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ชาย"
                                android:textSize="17sp"
                                android:textColor="#1A1A1A"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- อายุ -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/info_item_bg">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="40dp"
                            android:background="#34C759"
                            android:layout_marginEnd="16dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="อายุ"
                                android:textColor="#8E8E93"
                                android:textSize="13sp"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:id="@+id/textAge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25 ปี"
                                android:textSize="17sp"
                                android:textColor="#1A1A1A"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- น้ำหนัก -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/info_item_bg">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="40dp"
                            android:background="#FF9500"
                            android:layout_marginEnd="16dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="น้ำหนัก"
                                android:textColor="#8E8E93"
                                android:textSize="13sp"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:id="@+id/textWeight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="60 กก."
                                android:textSize="17sp"
                                android:textColor="#1A1A1A"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- ส่วนสูง -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/info_item_bg">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="40dp"
                            android:background="#FF3B30"
                            android:layout_marginEnd="16dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ส่วนสูง"
                                android:textColor="#8E8E93"
                                android:textSize="13sp"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:id="@+id/textHeight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="175 ซม."
                                android:textSize="17sp"
                                android:textColor="#1A1A1A"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ปุ่มออกจากระบบ -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="32dp"
                android:backgroundTint="#FF3B30">

                <Button
                    android:id="@+id/btnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ออกจากระบบ"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/txt_bg"
                    style="?android:attr/borderlessButtonStyle"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</ScrollView>