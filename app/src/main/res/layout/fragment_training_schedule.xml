<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    tools:context=".Fragment.training.TrainingScheduleFragment">

    <!-- ส่วนหัวของหน้าจอ - Gradient Background -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cdHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/darkBlue"
            android:paddingTop="48dp"
            android:paddingBottom="32dp"
            android:paddingHorizontal="24dp">

            <!-- Icon Container with Shadow Effect -->
            <androidx.cardview.widget.CardView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="32dp"
                app:cardElevation="8dp"
                android:backgroundTint="@color/white">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_article"
                    app:tint="@color/darkBlue" />
            </androidx.cardview.widget.CardView>

            <!-- Title with Better Typography -->
            <TextView
                android:id="@+id/tvHeaderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="โปรแกรมการฝึกซ้อม"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:letterSpacing="0.01"
                android:fontFamily="sans-serif-medium" />

            <!-- Subtitle with Animation Ready -->
            <TextView
                android:id="@+id/tvHeaderSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="สัปดาห์ที่ 1"
                android:textColor="#E3F2FD"
                android:textSize="16sp"
                android:alpha="0.9"
                android:visibility="gone" />

            <!-- Progress Indicator (Optional) -->
            <LinearLayout
                android:id="@+id/progressIndicatorLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <View
                    android:id="@+id/progress1"
                    android:layout_width="32dp"
                    android:layout_height="4dp"
                    android:layout_marginHorizontal="3dp"
                    android:background="@drawable/progress_indicator"
                    android:backgroundTint="@color/white" />

                <View
                    android:id="@+id/progress2"
                    android:layout_width="32dp"
                    android:layout_height="4dp"
                    android:layout_marginHorizontal="3dp"
                    android:background="@drawable/progress_indicator"
                    android:backgroundTint="#80FFFFFF" />

                <View
                    android:id="@+id/progress3"
                    android:layout_width="32dp"
                    android:layout_height="4dp"
                    android:layout_marginHorizontal="3dp"
                    android:background="@drawable/progress_indicator"
                    android:backgroundTint="#80FFFFFF" />

                <View
                    android:id="@+id/progress4"
                    android:layout_width="32dp"
                    android:layout_height="4dp"
                    android:layout_marginHorizontal="3dp"
                    android:background="@drawable/progress_indicator"
                    android:backgroundTint="#80FFFFFF" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Modern ProgressBar -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:visibility="gone"
        android:indeterminateTint="@color/white"
        app:layout_constraintTop_toTopOf="@id/cdHeader"
        app:layout_constraintBottom_toBottomOf="@id/cdHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scrollable content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/cdHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="24dp"
            android:paddingBottom="20dp">

            <!-- Premium Empty State Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardInitialState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="32dp"
                    android:gravity="center">

                    <!-- Premium Icon with Gradient Background -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        app:cardCornerRadius="48dp"
                        app:cardElevation="4dp"
                        android:backgroundTint="#E3F2FD">

                        <ImageView
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_article"
                            app:tint="@color/darkBlue" />
                    </androidx.cardview.widget.CardView>

                    <!-- Enhanced Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="เริ่มต้นการฝึกซ้อม"
                        android:textColor="#1A237E"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif-medium" />

                    <!-- Better Description -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="เลือกโปรแกรมที่เหมาะกับคุณ\nและเริ่มต้นการเปลี่ยนแปลงวันนี้"
                        android:textColor="#546E7A"
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:lineSpacingExtra="6dp"
                        android:alpha="0.87" />

                    <!-- Premium CTA Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnStart"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:layout_marginTop="28dp"
                        android:paddingHorizontal="40dp"
                        android:text="เลือกโปรแกรมของคุณ"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        app:cornerRadius="28dp"
                        app:elevation="4dp"
                        app:icon="@drawable/ic_arrow_back"
                        app:iconGravity="end"
                        app:iconPadding="8dp"
                        android:backgroundTint="@color/darkBlue" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Enhanced Week Selector -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/layoutWeekNavigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Premium Label with Icon -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="16dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_calendar"
                            app:tint="@color/darkBlue"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="เลือกสัปดาห์"
                            android:textColor="#1A237E"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                        <!-- Progress Text -->
                        <TextView
                            android:id="@+id/tvWeekProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="สัปดาห์ 1/4"
                            android:textColor="@color/darkBlue"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:alpha="0.7" />
                    </LinearLayout>

                    <!-- Smooth HorizontalScrollView -->
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:overScrollMode="never"
                        android:fadeScrollbars="false">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="4dp">

                            <!-- Week 1 - Enhanced Chip -->
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/btnWeek1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="12dp"
                                app:cardCornerRadius="24dp"
                                app:cardElevation="2dp"
                                app:strokeWidth="2dp"
                                app:strokeColor="#E0E0E0"
                                app:cardBackgroundColor="@color/white"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackground">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:paddingHorizontal="20dp"
                                    android:paddingVertical="12dp">

                                    <ImageView
                                        android:id="@+id/iconWeek1"
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_check_circle"
                                        app:tint="@color/grey_text"
                                        android:layout_marginEnd="8dp"
                                        android:visibility="gone" />

                                    <TextView
                                        android:id="@+id/tvWeek1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="สัปดาห์ที่ 1"
                                        android:textColor="@color/grey_text"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <!-- Week 2 -->
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/btnWeek2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="12dp"
                                app:cardCornerRadius="24dp"
                                app:cardElevation="2dp"
                                app:strokeWidth="2dp"
                                app:strokeColor="#E0E0E0"
                                app:cardBackgroundColor="@color/white"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackground">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:paddingHorizontal="20dp"
                                    android:paddingVertical="12dp">

                                    <ImageView
                                        android:id="@+id/iconWeek2"
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_check_circle"
                                        app:tint="@color/grey_text"
                                        android:layout_marginEnd="8dp"
                                        android:visibility="gone" />

                                    <TextView
                                        android:id="@+id/tvWeek2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="สัปดาห์ที่ 2"
                                        android:textColor="@color/grey_text"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <!-- Week 3 -->
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/btnWeek3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="12dp"
                                app:cardCornerRadius="24dp"
                                app:cardElevation="2dp"
                                app:strokeWidth="2dp"
                                app:strokeColor="#E0E0E0"
                                app:cardBackgroundColor="@color/white"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackground">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:paddingHorizontal="20dp"
                                    android:paddingVertical="12dp">

                                    <ImageView
                                        android:id="@+id/iconWeek3"
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_check_circle"
                                        app:tint="@color/grey_text"
                                        android:layout_marginEnd="8dp"
                                        android:visibility="gone" />

                                    <TextView
                                        android:id="@+id/tvWeek3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="สัปดาห์ที่ 3"
                                        android:textColor="@color/grey_text"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <!-- Week 4 -->
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/btnWeek4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="24dp"
                                app:cardElevation="2dp"
                                app:strokeWidth="2dp"
                                app:strokeColor="#E0E0E0"
                                app:cardBackgroundColor="@color/white"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackground">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:paddingHorizontal="20dp"
                                    android:paddingVertical="12dp">

                                    <ImageView
                                        android:id="@+id/iconWeek4"
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_check_circle"
                                        app:tint="@color/grey_text"
                                        android:layout_marginEnd="8dp"
                                        android:visibility="gone" />

                                    <TextView
                                        android:id="@+id/tvWeek4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="สัปดาห์ที่ 4"
                                        android:textColor="@color/grey_text"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- RecyclerView with Better Spacing -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewTraining"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false"
                android:overScrollMode="never" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>