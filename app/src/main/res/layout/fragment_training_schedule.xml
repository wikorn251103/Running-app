<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="80dp"
    android:background="#F5F5F5"
    tools:context=".Fragment.training.TrainingScheduleFragment">

    <!-- ส่วนหัวของหน้าจอ -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cdHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/purple"
            android:paddingTop="40dp"
            android:paddingBottom="24dp"
            android:paddingHorizontal="20dp">

            <!-- Icon Container -->
            <androidx.cardview.widget.CardView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                android:backgroundTint="@color/white">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_article"
                    app:tint="@color/purple" />
            </androidx.cardview.widget.CardView>

            <!-- Title -->
            <TextView
                android:id="@+id/tvHeaderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:text="โปรแกรมการฝึกซ้อม"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:textStyle="bold"
                android:letterSpacing="0.02" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/tvHeaderSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:text="สัปดาห์ที่ 1"
                android:textColor="#E1BEE7"
                android:textSize="15sp"
                android:visibility="gone" />

            <!-- Week Progress Indicator -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/circle_indicator"
                    android:backgroundTint="@color/white" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/circle_indicator"
                    android:backgroundTint="#80FFFFFF" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/circle_indicator"
                    android:backgroundTint="#80FFFFFF" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/circle_indicator"
                    android:backgroundTint="#80FFFFFF" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- ProgressBar -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:visibility="gone"
        android:indeterminateTint="@color/white"
        app:layout_constraintTop_toTopOf="@id/cdHeader"
        app:layout_constraintBottom_toBottomOf="@id/cdHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scrollable content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/cdHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Card: เลือกแผนฝึก -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardInitialState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white">

                    <!-- Header Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="28dp"
                        android:gravity="center"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <!-- Icon -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:cardCornerRadius="40dp"
                            app:cardElevation="0dp"
                            android:backgroundTint="#F3E5F5">

                            <ImageView
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_article"
                                app:tint="@color/purple" />
                        </androidx.cardview.widget.CardView>

                        <!-- Title -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="โปรดเลือกตารางซ้อมของคุณ"
                            android:textColor="@color/black"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textAlignment="center" />

                        <!-- Description -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="เลือกประเภทการฝึกซ้อมที่เหมาะกับเป้าหมายและระดับความสามารถของคุณ"
                            android:textColor="@color/grey_text"
                            android:textSize="15sp"
                            android:textAlignment="center"
                            android:lineSpacingExtra="4dp" />

                        <!-- Button -->
                        <Button
                            android:id="@+id/btnStart"
                            android:layout_width="wrap_content"
                            android:layout_height="56dp"
                            android:layout_marginTop="24dp"
                            android:paddingHorizontal="32dp"
                            android:text="เลือกตารางซ้อมของคุณ"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:cornerRadius="28dp"
                            android:backgroundTint="@color/purple" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ปุ่มเลือกสัปดาห์ -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/layoutWeekNavigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Label -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="8dp"
                        android:paddingBottom="8dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="20dp"
                            android:background="@color/purple"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="เลือกสัปดาห์"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Week Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btnWeek1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="สัปดาห์ 1"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginEnd="6dp"
                            app:cornerRadius="12dp"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                        <Button
                            android:id="@+id/btnWeek2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="สัปดาห์ 2"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="3dp"
                            app:cornerRadius="12dp"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                        <Button
                            android:id="@+id/btnWeek3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="สัปดาห์ 3"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="3dp"
                            app:cornerRadius="12dp"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                        <Button
                            android:id="@+id/btnWeek4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="สัปดาห์ 4"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginStart="6dp"
                            app:cornerRadius="12dp"
                            style="@style/Widget.Material3.Button.OutlinedButton" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewTraining"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>