<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FAFAFA"
    tools:context=".Fragment.home.HomeFragment">

    <!-- Root LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="100dp">

        <!-- ================= HEADER ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple"
            android:orientation="vertical"
            android:paddingTop="48dp"
            android:paddingBottom="40dp"
            android:elevation="2dp">

            <!-- ไอคอนแอป -->
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="40dp"
                app:cardElevation="8dp"
                android:backgroundTint="@color/white">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/app_icon"
                    android:src="@drawable/ic_shoe"
                    app:tint="@color/purple" />
            </androidx.cardview.widget.CardView>

            <!-- ชื่อแอป -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Recommended Running"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:textStyle="bold"
                android:letterSpacing="0.01" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:text="แอปพลิเคชันสำหรับคุณ"
                android:textColor="#E1BEE7"
                android:textSize="15sp"
                android:alpha="0.95" />
        </LinearLayout>

        <!-- ================= เลือกตารางซ้อม ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    android:backgroundTint="#F3E5F5">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_article"
                        app:tint="@color/purple" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="16dp"
                    android:text="เลือกตารางซ้อมวิ่งของคุณ"
                    android:textColor="#212121"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginTop="4dp"
                android:text="เริ่มต้นการเดินทางสู่การวิ่งที่ดีกว่าด้วยโปรแกรมที่เหมาะสมกับคุณ"
                android:textColor="#757575"
                android:textSize="15sp"
                android:lineSpacingExtra="3dp" />
        </LinearLayout>

        <!-- ================= STATE 1 : ยังไม่เลือกตารางซ้อม ================= -->
        <androidx.cardview.widget.CardView
            android:id="@+id/notSelectedStateCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:visibility="visible"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header with Gradient -->
                <LinearLayout
                    android:id="@+id/headerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_card_header"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        app:cardCornerRadius="32dp"
                        app:cardElevation="4dp"
                        android:backgroundTint="@color/white">

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_bolt"
                            app:tint="@color/purple" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="เริ่มต้นการซ้อม"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="เลือกโปรแกรมที่เหมาะสมกับคุณ"
                            android:textColor="#E1BEE7"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:background="@color/white">

                    <!-- Description -->
                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="พร้อมเริ่มการวิ่งแล้วหรือยัง? เลือกโปรแกรมการซ้อมที่เหมาะสมกับระดับความสามารถของคุณ"
                        android:textColor="#424242"
                        android:textSize="15sp"
                        android:lineSpacingExtra="4dp" />

                    <!-- Footer -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#F3E5F5"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3 โปรแกรมให้เลือก"
                                    android:textColor="@color/purple"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="แตะเพื่อดูรายละเอียด"
                                    android:textColor="#757575"
                                    android:textSize="13sp" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/nextBtn"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/baseline_arrow_forward_ios_24"
                                app:tint="@color/purple" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ================= STATE 2 : เลือกตารางซ้อมแล้ว ================= -->
        <LinearLayout
            android:id="@+id/selectedStateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- การ์ดโปรแกรมหลัก -->
            <androidx.cardview.widget.CardView
                android:id="@+id/mainProgramCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Header with Gradient -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/purple"
                        android:orientation="vertical"
                        android:padding="28dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="โปรแกรมปัจจุบัน"
                            android:textColor="#E1BEE7"
                            android:textSize="13sp"
                            android:letterSpacing="0.1" />

                        <!-- ชื่อโปรแกรม -->
                        <TextView
                            android:id="@+id/mainProgramTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="5km-sub25"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.03" />

                        <View
                            android:layout_width="50dp"
                            android:layout_height="3dp"
                            android:layout_marginTop="12dp"
                            android:background="@color/white"
                            android:alpha="0.6" />
                    </LinearLayout>

                    <!-- Exit Button -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:background="@color/white">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/exitProgramButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardBackgroundColor="#FFEBEE"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:padding="16dp">

                                <ImageView
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_bolt"
                                    app:tint="#E53935" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:text="ออกจากตารางซ้อม"
                                    android:textColor="#E53935"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- การ์ดโปรแกรมย่อย -->
            <androidx.cardview.widget.CardView
                android:id="@+id/subProgramCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Header Section with Gradient Background -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/gradient_card_header"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <!-- Icon Container with Circle Background -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                app:cardCornerRadius="28dp"
                                app:cardElevation="4dp"
                                android:backgroundTint="@color/white">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:contentDescription="Program icon"
                                    android:src="@drawable/ic_article"
                                    app:tint="@color/purple" />

                            </androidx.cardview.widget.CardView>

                            <!-- Title with subtitle -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ตารางการฝึกซ้อม"
                                    android:textColor="#E1BEE7"
                                    android:textSize="12sp"
                                    android:letterSpacing="0.05" />

                                <TextView
                                    android:id="@+id/subProgramTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="โปรแกรมย่อยอื่นๆ"
                                    android:textColor="@color/white"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:maxLines="2"
                                    android:ellipsize="end"/>

                            </LinearLayout>

                            <!-- Arrow Icon -->
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/baseline_arrow_forward_ios_24"
                                app:tint="@color/white"
                                android:contentDescription="Arrow icon"/>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Training Days Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:background="@color/white">

                        <!-- Section Label -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <View
                                android:layout_width="4dp"
                                android:layout_height="24dp"
                                android:background="@color/purple"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="รายละเอียดการซ้อม"
                                android:textColor="#212121"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                        </LinearLayout>

                        <!-- RecyclerView แสดงวัน/รายละเอียดการซ้อม -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerTrainingDays"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:clipToPadding="false"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- ProgressBar -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:visibility="gone"
                android:indeterminateTint="@color/purple" />
        </LinearLayout>

        <!-- ================= ฟีเจอร์เสริม ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    android:backgroundTint="#FFF9C4">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:src="@android:drawable/btn_star_big_on"
                        app:tint="#FFA000" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="16dp"
                    android:text="ฟีเจอร์เสริม"
                    android:textColor="#212121"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginTop="4dp"
                android:text="เครื่องมือและความรู้เพิ่มเติมเพื่อการวิ่งที่ดีขึ้น"
                android:textColor="#757575"
                android:textSize="15sp"
                android:lineSpacingExtra="3dp" />
        </LinearLayout>

        <!-- ================= Feature Cards ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <!-- Drill Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/startDrill"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@color/white">

                    <androidx.cardview.widget.CardView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        app:cardCornerRadius="28dp"
                        app:cardElevation="0dp"
                        android:backgroundTint="#E3F2FD">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_walk"
                            app:tint="#1976D2" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="การดริลเพื่อท่าทางถูกต้อง"
                        android:textColor="#212121"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:lineSpacingExtra="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="ปรับปรุงท่าวิ่งให้มีประสิทธิภาพและลดการบาดเจ็บ"
                        android:textColor="#757575"
                        android:textSize="13sp"
                        android:lineSpacingExtra="3dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Track Progress Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/trackProgress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@color/white">

                    <androidx.cardview.widget.CardView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        app:cardCornerRadius="28dp"
                        app:cardElevation="0dp"
                        android:backgroundTint="#F3E5F5">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_grap"
                            app:tint="@color/purple" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="ติดตามความก้าวหน้า"
                        android:textColor="#212121"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:lineSpacingExtra="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="สถิติและกราฟแสดงพัฒนาการของคุณ"
                        android:textColor="#757575"
                        android:textSize="13sp"
                        android:lineSpacingExtra="3dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>
</ScrollView>